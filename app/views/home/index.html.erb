<style>
  .MainContainer {
    position:relative;
    background-color: black;
  }

  .container{
    width:40%;
    position:absolute;
    top:0;
    left: 0;
    right: 0;
    overflow: auto;
  }

  .navbar{
    position: absolute;
    z-index: 10;
    width:100%;
  }
</style>

<div class="MainContainer">

  <div class="container-fluid mx-0 px-0"><!-- Caroussel -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner bg-info" role="listbox">
        <% @full_ads.each_with_index do |full_ad, index|  %>
          <% if full_ad.fullpage_ad.attached? %>
            <% if index == 0 %>
              <div class="carousel-item active">
                <%= link_to( image_tag(full_ad.fullpage_ad, class:"img-responsive"), restaurant_path(full_ad.restaurant.id)) %>
              </div>
            <% else %>
              <div class="carousel-item">
                <%= link_to( image_tag(full_ad.fullpage_ad, class:"img-responsive"), restaurant_path(full_ad.restaurant.id)) %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
      </a>
    </div>
  </div><!-- End of caroussel -->

  <div class="container"><!-- Search box -->
    <div class="row justify-content-center align-items-center" style="margin-top:350px">
      <div class="col-12">
        <%= form_tag "/search", method: :get, class:"input-group" do %>
          <%= text_field_tag :q, nil, placeholder: 'Buscar', class:"form-control" %>
          <div class="input-group-append">
            <%= submit_tag 'Buscar', class:"btn btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div><!-- End of search box -->
</div>