<div class="container mb-4">
  <h1 style="font-size: 2.5rem;">Resultados</h1>
</div>

<div class="container">
  <div class="row row-cols-2">
    <div class="col-9">

        <% @places.each do |restaurant|  %>
          <div class="card mb-2 " style="width: 80%;">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to restaurant.name, restaurant_path(restaurant), class:"search-link" %>
              </h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= restaurant.cuisine.name %>
              </h6>
              <p class="card-text">
                <%= restaurant.address %> <%= restaurant.neighborhood %> <%= restaurant.city %>
              </p>
            </div>
          </div>
        <% end %>

    </div>
    <div class="col-3">
       <% @ads.each do |ad|  %>
        <% if ad.mini_ad.attached? %>
          <td><%= link_to( image_tag(ad.mini_ad, class:"pict-format"), restaurant_path(ad.restaurant.id)) %></td>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class=container>
    <div class="col-sm-5 mt-3">
      <%= link_to 'Voltar', root_path, class:"btn btn-secondary" %>
    </div><br><br>
</div>