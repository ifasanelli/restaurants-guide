<div class="container">
  <h1 class="mt-5 mb-4">Anúncio lateral</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Restaurante</th>
        <th scope="col">Imagem</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @ad.name %></td>
        <td><%= @ad.restaurant.name %></td>
        <td><%= image_tag(@ad.mini_ad, id: @ad.name, style:"width:234px;height:60px") %></td>
      </tr>
    </tbody>
  </table>

  <div class="col-sm-5">
    <%= link_to 'Deletar', ad_path(@ad), method: :delete, class: "btn btn-danger", data: { confirm: 'Quer apagar este anúncio?' } %>
    <%= link_to 'Voltar', ads_path, class:"btn btn-outline-dark" %>
  </div>

</div>