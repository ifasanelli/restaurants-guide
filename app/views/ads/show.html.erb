<div class="container">
  <h2>Anúncio</h2>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Restaurante</th>
        <th scope="col">Imagem</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @ad.name %></td>
        <td><%= @ad.restaurant.name %></td>
        <td><image src="<%=(url_for(@ad.mini_ad))%>", id="<%=@ad.name%>"></td>
      </tr>
    </tbody>
  </table>

  <div class="col-sm-5">
    <%= link_to 'Deletar', ad_path(@ad), method: :delete, class: "btn btn-danger", data: { confirm: 'Quer apagar este anúncio?' } %>
    <%= link_to 'Voltar', ads_path, class:"btn btn-outline-dark" %>
  </div>

</div>