<div class="container">
  <h1 class="mt-5 mb-4">Restaurantes</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nome</th>
      </tr>
    </thead>
    <tbody>
      <% @restaurants.each do |restaurant|  %>
          <tr>
              <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
          </tr>
      <% end %>
    </tbody>
  </table><br><br>

  <div class="col-sm-5">
    <%= link_to 'Novo restaurante', new_restaurant_path, class:"btn btn-primary" %>
    <%= link_to 'Voltar', root_path, class:"btn btn-outline-dark" %>
  </div>
</div>