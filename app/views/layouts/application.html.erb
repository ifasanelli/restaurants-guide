<!DOCTYPE html>
<html>
  <head>
    <title>Orla Guia</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('O.ico') %>
  </head>

    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to image_tag("orla", alt: "logo"), '/', class: 'navbar-brand d-inline-block align-top' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="http://localhost:3000/">Home<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/">Quem Somos<span class="sr-only"></span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:3000/">Contato<span class="sr-only"></span></a>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item active">
                <%= link_to 'Sair', destroy_user_session_path, method: :delete, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
          <% else %>
            <li class="nav-item active">
                <%= link_to 'Entrar', new_user_session_path, class: 'nav-link' %><span class="sr-only">(current)</span>
            </li>
          <% end %>
        </ul>
        <% unless current_page?(root_path) %>
          <%= form_tag "/search", method: :get, class:"form-inline my-2 my-lg-0" do %>
            <%= text_field_tag :q, nil, placeholder: 'Buscar', class:"form-control mr-sm-2" %>
            <%= submit_tag 'Buscar', class:"btn btn-outline-dark my-2 my-sm-0" %>
          <% end %>
        <% end %>
      </div>
    </nav>

    <% if alert %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= alert %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% elsif notice %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong><%= notice %></strong>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
    <% end %>
    <%= yield %>

  </body>
</html>
